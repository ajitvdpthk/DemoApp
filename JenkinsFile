pipeline {
    agent any
    parameters{
      string (
        name : 'Environment',
        defaultValue: '',
        description: ''
      )         
     
    }  
    stages {
        stage('Build') {
            steps {
                echo 'Building..'
            }
        }
        stage('Test') {
          when {
            expression { "${Environment}" == 'QA' }
          }
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}
