pipeline {
    agent {
      node{
        label 'master'
      }
    }
    parameters{
      string (
        name : 'Environment',
        defaultValue: '',
        description: ''
      )         
     
    }  
    stages {
        stage('Build') {
        when {
            expression { "${Environment}" == 'QA' }
          }
            steps {
                echo 'Building..'
            }
        }
        stage('Test') {
          when {
            expression { "${Environment}" == 'Stage' }
          }
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
         when {
            expression { "${Environment}" == 'Prod' }
          }
            steps {
                echo 'Deploying....'
            }
        }
    }
}
